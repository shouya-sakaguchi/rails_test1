<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @box.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @box.description %>
</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Favorite</th>
      <th>Box</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @box.items.each do |item| %>
      <%= render item %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_box_path(@box) %> |
<%= link_to 'Back', boxes_path %>
